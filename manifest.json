{
  "manifest_version": 3,
  "name": "NotionWebThemes",
  "version": "0.0.1",
  "description": "Beautiful themes for Notion Web.",
  "permissions": ["storage"],
  "host_permissions": ["https://notionstyle.github.io/"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_title": "Choose a theme",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icons/16.png",
      "38": "icons/48.png"
    }
  },
  "options_page": "options.html"
}
